=== DOCKER-COMPOSE ===
version: '3.9'

services:
  backend:
    build:
      context: .
      dockerfile: docker/backend.Dockerfile
    env_file:
      - ./apps/backend/.env.example
    ports:
      - '8000:8000'
    volumes:
      - ./apps/backend:/app
    working_dir: /app
    depends_on:
      - db

  frontend:
    build:
      context: .
      dockerfile: docker/frontend.Dockerfile
    ports:
      - '3000:3000'
    environment:
      NEXT_PUBLIC_API_BASE_URL: http://backend:8000/api
    volumes:
      - .:/app
      - /app/node_modules
    working_dir: /app
    depends_on:
      - backend

  db:
    image: postgres:15-alpine
    restart: unless-stopped
    environment:
      POSTGRES_DB: bidaitxakur
      POSTGRES_USER: bidai
      POSTGRES_PASSWORD: bidai
    ports:
      - '5432:5432'
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:

