{
  "name": "bidaitxakur-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for bidaitxakur platform - a pet-friendly travel guide",
  "private": true,
  "scripts": {
    "dev": "docker-compose up",
    "build": "docker-compose build",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "backend-dev": "docker-compose run --service-ports backend",
    "frontend-dev": "cd apps/frontend && npm run dev"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "keywords": [
    "pet-friendly",
    "travel",
    "guide",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {}
}